{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "KrakenD - API Gateway",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "port": 8080,
  "sequential_start": false,
  "endpoints": [
    {
      "endpoint": "/kraken/songartist/{id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/song/{id}",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "disable_host_sanitize": false,
          "host": [
            "http://host.docker.internal:8081"
          ]
        },
        {
          "url_pattern": "/artist/{resp0_artistId}",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://host.docker.internal:8082"
          ],
          "disable_host_sanitize": false
        }
      ],
      "extra_config": {
        "proxy": {
          "sequential": true
        }
      }
    },
    {
      "endpoint": "/kraken/song/",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/song/",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "host": [
            "http://host.docker.internal:8081"
          ],
          "disable_host_sanitize": false
        }
      ],
      "input_query_strings": [
        "title",
        "artistId"
      ]
    },
    {
      "endpoint": "/kraken/artist/",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/artist/",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "host": [
            "http://host.docker.internal:8082"
          ],
          "disable_host_sanitize": false
        }
      ],
      "input_query_strings": [
        "name",
        "surname",
        "country"
      ]
    },
    {
      "endpoint": "/kraken/song/{id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/song/{id}",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://host.docker.internal:8081"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/kraken/artist/{id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/artist/{id}",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://host.docker.internal:8082"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/kraken/auth/",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/auth/realms/master/protocol/openid-connect/token",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "host": [
            "http://host.docker.internal:8484"
          ],
          "disable_host_sanitize": false
        }
      ]
    }
  ],
  "extra_config": {
    "telemetry/influx": {
      "address": "http://host.docker.internal:8086",
      "ttl": "25s",
      "buffer_size": 100,
      "username": "kraken",
      "password": "pass"
    },
    "telemetry/metrics": {
      "collection_time": "30s",
      "listen_address": ":8090"
    },
    "telemetry/opencensus": {
      "sample_rate": 100,
      "reporting_period": 0,
      "exporters": {
        "prometheus": {
          "port": 8091,
          "namespace": "krakend",
          "tag_host": false,
          "tag_path": true,
          "tag_method": true,
          "tag_statuscode": false
        },
        "jaeger": {
          "endpoint": "http://host.docker.internal:14268/api/traces",
          "service_name": "krakend",
          "buffer_max_count": 1000
        }
      }
    }
  }
}